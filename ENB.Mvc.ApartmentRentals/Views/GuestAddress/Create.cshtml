@model ENB.Mvc.ApartmentRentals.Models.EditGuestAddress

@{
    ViewData["Title"] = "Create";
    
}
<div class="alert alert-primary" role="alert">
    <h2><strong>Create Address Guest : @ViewBag.Message </strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-route-guestId="@ViewBag.Idguest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                            <label asp-for="Number_street" class="control-label"></label>
                        </div>
                        <input asp-for="Number_street" class="form-control" />
                        <span asp-validation-for="Number_street" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="City" class="control-label card-header col-md-6"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Zipcode" class="control-label card-header col-md-6"></label>
                        <input asp-for="Zipcode" class="form-control" />
                        <span asp-validation-for="Zipcode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="State_province_county" class="control-label card-header"></label>
                        <input asp-for="State_province_county" class="form-control" />
                        <span asp-validation-for="State_province_county" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Country" class="control-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Create" asp-route-guestId="@ViewBag.Idguest" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
