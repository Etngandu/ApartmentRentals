@model ENB.Mvc.ApartmentRentals.Models.CreateAndEditGuest
@using ENB.ApartmentRentals.Entities

@{
    ViewData["Title"] = "Edit";
}
<div class="alert alert-primary" role="alert">
    <h2><strong>Edit Guest</strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                            <label asp-for="Guest_first_name" class="control-label"></label>
                        </div>
                        <input asp-for="Guest_first_name" class="form-control" />
                        <span asp-validation-for="Guest_first_name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                            <label asp-for="Guest_last_name" class="control-label"></label>
                        </div>
                        <input asp-for="Guest_last_name" class="form-control" />
                        <span asp-validation-for="Guest_last_name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="EmailAddres" class="control-label"></label>
                        </div>
                        <input asp-for="EmailAddres" class="form-control" />
                        <span asp-validation-for="EmailAddres" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                        </div>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="Date_of_birth" class="control-label"></label>
                        </div>
                        <input asp-for="Date_of_birth" class="form-control" />
                        <span asp-validation-for="Date_of_birth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="Gender_code" class="control-label"></label>
                        </div>
                        <select asp-for="Gender_code" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                        <span asp-validation-for="Gender_code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="Other_guest_details" class="control-label"></label>
                        </div>
                        @* <input asp-for="Other_guest_details" class="form-control" />*@
                        <textarea asp-for="Other_guest_details" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Other_guest_details" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row" style="margin-top:10px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
