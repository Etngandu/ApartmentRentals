@using ENB.ApartmentRetals.Entities;
@model ENB.Mvc.ApartmentRentals.Models.DisplayApartmentFacility;

@{
    ViewData["Title"] = "Delete";
}


<div class="alert alert-danger" role="alert">
    <h2><strong>Do you really want to remove This Facility ?</strong></h2>
    <h4><strong>@ViewBag.Message</strong></h4>    
    <h4><strong>Apartment N° @ViewBag.Id ?</strong></h4>
</div>

<div id="view-all">
    @await Html.PartialAsync("_Details", Model)
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <a  asp-action="List" asp-route-Apartment_BuildingId="@ViewBag.aprtbldId" 
                  asp-route-ApartmentId="@ViewBag.apartId" class="btn btn-secondary btn-block col-md-4">Back to List</a>
            </div>
        </div>
    </div>
}
