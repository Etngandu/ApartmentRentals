@using ENB.ApartmentRetals.Entities;
@model ENB.Mvc.ApartmentRentals.Models.DisplayApartmentBooking;

@{
    ViewData["Title"] = "Details";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Details Apartment: @ViewBag.Id</strong></h2>
</div>

<div id="view-all">
    @await Html.PartialAsync("_Details", Model)
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
    <div class="row">
        <div class="col-md-6">
            <a asp-action="Edit" asp-controller="ApartmentBooking" asp-route-id="@ViewBag.Id" asp-route-Apartment_BuildingId="@ViewBag.Idapbld"
           asp-route-ApartmentId="@ViewBag.AparId" class="btn btn-info btn-block col-md-2">Edit</a>
        </div>
        <div class="col-md-6">
            <a asp-action="List" asp-route-Apartment_BuildingId="@ViewBag.Idapbld"
           asp-route-ApartmentId="@ViewBag.AparId" class="btn btn-secondary btn-block col-md-5">Back to List</a>
        </div>
    </div>



