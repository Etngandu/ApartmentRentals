@model ENB.Mvc.ApartmentRentals.Models.CreateAndEditApartmentBuilding

<div class="alert alert-primary" role="alert">
    <h2><strong>Create New Apartment Building</strong></h2>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Building_short_name" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Building_short_name" class="form-control" />
                        <span asp-validation-for="Building_short_name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Building_full_name" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Building_full_name" class="form-control" />
                        <span asp-validation-for="Building_full_name" class="text-danger"></span>
                    </div>
                </div>              

                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Building_address" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Building_address" class="form-control" />
                        <span asp-validation-for="Building_address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Building_manager" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Building_manager" class="form-control" />
                        <span asp-validation-for="Building_manager" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Building_phone" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <input asp-for="Building_phone" class="form-control" />
                        <span asp-validation-for="Building_phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Building_description" class="control-label card-header col-md-12" style="margin-bottom:10px"></label>
                        <textarea asp-for="Building_description" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Building_description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Other_buiding_details" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <textarea asp-for="Other_buiding_details" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Other_buiding_details" class="text-danger"></span>
                    </div>
                </div>                
            </div>
            <div class="row" style="margin-top:10px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="Index"  class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
